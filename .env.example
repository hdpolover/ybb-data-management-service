# YBB Data Management Service - Environment Configuration Template
# Copy this file to .env and update the values as needed

# Flask Environment
FLASK_ENV=development
FLASK_APP=app.py
FLASK_DEBUG=True

# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
MAX_CONTENT_LENGTH=104857600

# Security
SECRET_KEY=your-secret-key-here

# Performance Settings
MAX_CHUNK_SIZE=1000
MAX_MEMORY_MB=500
REQUEST_TIMEOUT=300

# File Settings
UPLOAD_FOLDER=temp
EXPORT_RETENTION_HOURS=24

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/ybb_api.log
ACCESS_LOG=logs/ybb_api_access.log
LOG_RETENTION_DAYS=7
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# CORS Settings (comma-separated origins)
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Health Check
HEALTH_CHECK_INTERVAL=30

# Database Configuration (if needed for future features)
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=ybb_data_management
DB_PORT=3306
